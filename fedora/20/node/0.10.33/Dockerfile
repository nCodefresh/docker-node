FROM fedora:20
MAINTAINER William Blankenship <wblankenship@nodesource.com>

RUN yum install -y \
      curl \
      perl \
      which \
 && yum clean all

RUN curl -sL -o ns.rpm https://rpm.nodesource.com/pub/fc/20/x86_64/nodejs-0.10.33-1nodesource.fc20.x86_64.rpm \
 && rpm -i --nosignature --force ns.rpm \
 && rm -f ns.rpm \
 && npm update -g npm

RUN npm install -g pangyp\
 && ln -s $(which pangyp) $(dirname $(which pangyp))/node-gyp\
 && npm cache clear\
 && node-gyp configure || echo ""

ENV NODE_ENV production
WORKDIR /usr/src/app
CMD ["npm","start"]